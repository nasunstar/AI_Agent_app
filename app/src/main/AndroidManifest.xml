<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- manifest 루트 태그. 앱의 전반적인 설정을 담는 곳 -->
    <!-- xmlns:android : 안드로이드 전용 속성 네임스페이스 선언 -->
    <!-- xmlns:tools : 개발 도구(Android Studio 등)에서 사용하는 보조 네임스페이스 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 앱이 인터넷에 접근할 수 있도록 권한 요청 -->
    <!-- 네트워크 통신(서버 연결, API 호출 등)에 반드시 필요 -->
    <application
        android:name="App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DataBase_project">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DataBase_project">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>